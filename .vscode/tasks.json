{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-math-core",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build", "--release",
        "--manifest-path", "${workspaceFolder}/math_core/Cargo.toml",
        "--target", "x86_64-pc-windows-gnu"
      ],
      "problemMatcher": []
    },
    {
      "label": "build-game",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",

        // source files (adjust glob if you have sub-dirs)
        "${workspaceFolder}/**/*.cpp",
        // headers
        "-I${workspaceFolder}/include",

        // libs
        "-L${workspaceFolder}/lib",
        "-lmath_core",
        "-lraylib",
        "-lopengl32", "-lgdi32", "-lwinmm",

        // flags
        "-static", "-mwindows",
        "-o", "${workspaceFolder}/main.exe"
      ],
      "dependsOn": ["build-math-core"],
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
