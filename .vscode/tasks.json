{
  "version": "2.0.0",
  "tasks": [

    // ---------- 1-A  build the Rust static lib ----------
    {
      "label": "build-math-core",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build", "--release",
        "--manifest-path", "${workspaceFolder}/math_core/Cargo.toml",
        "--target", "x86_64-pc-windows-gnu"
      ],
      "problemMatcher": []
    },

    // ---------- 1-B  build + link the C++ / Raylib game ----------
    {
      "label": "build-game",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",

        // ---- source files ----
    "${workspaceFolder}/game_index/*.cpp",
    "${workspaceFolder}/game_index/game_logic/*.cpp",
    "${workspaceFolder}/game_index/game_logic/inventory/*.cpp",
    "${workspaceFolder}/game_index/screen_logic/*.cpp",

        // ---- header search paths ----
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/third_party/raylib/include",

        // ---- library search paths ----
        "-L${workspaceFolder}/lib",                     // Rust libmath_core.a
        "-L${workspaceFolder}/third_party/raylib/lib",  // Raylib libraylib.a

        // ---- link order ----
        "-lmath_core",
        "-lraylib",
        "-lopengl32", "-lgdi32", "-lwinmm",

        // ---- exe flags ----
        "-static", "-mwindows",
        "-o", "${workspaceFolder}/main.exe"
      ],
      "dependsOn": ["build-math-core"],
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}

